<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F0F"
    tools:context=".ui.activities.AuthActivity">

    <!-- Floating Background Images Container -->
    <com.just_for_fun.justforfun.ui.custom.FloatingBackgroundView
        android:id="@+id/floatingBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="-50dp"
        android:layout_marginBottom="-50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Dark Gradient Overlay -->
    <View
        android:id="@+id/backgroundOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dark_gradient_overlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Enhanced Mode Toggle Container with Sliding Indicator -->
    <androidx.cardview.widget.CardView
        android:id="@+id/modeToggleContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="#1A1A1A"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <!-- Sliding Indicator Background -->
            <View
                android:id="@+id/modeIndicator"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_gravity="start|center_vertical"
                android:background="@drawable/mode_toggle_active_background"
                android:elevation="4dp" />

            <!-- Mode Toggle Buttons Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLoginMode"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="Sign In"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:elevation="8dp"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="22dp"
                    app:rippleColor="#FF6B6B"
                    app:strokeWidth="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSignUpMode"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:text="Sign Up"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:elevation="8dp"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="22dp"
                    app:rippleColor="#FF6B6B"
                    app:strokeWidth="0dp" />

            </LinearLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <!-- Auth Card Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/authCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#1A1A1A"
        app:cardCornerRadius="20dp"
        app:cardElevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/modeToggleContainer"
        app:layout_constraintVertical_bias="0.3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- App Logo/Icon -->
            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:background="@drawable/dark_circle_background"
                android:elevation="8dp"
                android:padding="20dp"
                android:src="@drawable/ic_movie" />

            <!-- Welcome Text -->
            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:text="Welcome Back"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp"
                android:text="Sign in to continue your movie journey"
                android:textColor="#B0B0B0"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="2dp"
                android:paddingRight="2dp">

                <!-- Name Input (Only for Sign Up) -->
                <LinearLayout
                    android:id="@+id/nameInputContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/dark_input_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_person"
                        app:tint="#B0B0B0" />

                    <EditText
                        android:id="@+id/nameEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Full Name"
                        android:inputType="textPersonName|textCapWords"
                        android:maxLines="1"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#666666"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Username Input (Only for Sign Up) -->
                <LinearLayout
                    android:id="@+id/usernameInputContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/dark_input_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_person"
                        app:tint="#B0B0B0" />

                    <EditText
                        android:id="@+id/usernameEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Username"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#666666"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Email Input -->
                <LinearLayout
                    android:id="@+id/emailInputContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/dark_input_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_email"
                        app:tint="#B0B0B0" />

                    <EditText
                        android:id="@+id/emailEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#666666"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Password Input -->
                <LinearLayout
                    android:id="@+id/passwordContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/dark_input_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_lock"
                        app:tint="#B0B0B0" />

                    <EditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#666666"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/passwordToggle"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="12dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="2dp"
                        android:src="@drawable/ic_visibility_off"
                        app:tint="#B0B0B0" />

                </LinearLayout>

                <!-- Confirm Password Input (Only for Sign Up) -->
                <LinearLayout
                    android:id="@+id/confirmPasswordContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/dark_input_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_lock"
                        app:tint="#B0B0B0" />

                    <EditText
                        android:id="@+id/confirmPasswordEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#666666"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/confirmPasswordToggle"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="12dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:padding="2dp"
                        android:src="@drawable/ic_visibility_off"
                        app:tint="#B0B0B0" />

                </LinearLayout>
            </LinearLayout>

            <!-- Remember Me and Forgot Password Row (Only for Login) -->
            <LinearLayout
                android:id="@+id/loginOptionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/rememberMeCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FF6B6B"
                    android:text="Remember me"
                    android:textColor="#B0B0B0"
                    android:textSize="14sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/forgotPasswordText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:text="Forgot Password?"
                    android:textColor="#FF6B6B"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Enhanced Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAuth"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:elevation="12dp"
                android:text="Sign In"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="#FF6B6B"
                app:cornerRadius="28dp"
                app:rippleColor="#FFFFFF33"
                app:strokeColor="#FF8A8A"
                app:strokeWidth="1dp" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:indeterminateTint="#FF6B6B"
                android:visibility="gone" />

            <!-- Divider with OR (Only for Login) -->
            <LinearLayout
                android:id="@+id/dividerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:text="OR"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#333333" />

            </LinearLayout>

            <!-- Enhanced Social Login Buttons (Only for Login) -->
            <LinearLayout
                android:id="@+id/socialLoginContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoogleLogin"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:elevation="4dp"
                    android:text="Google"
                    android:textColor="#B0B0B0"
                    android:textSize="14sp"
                    app:backgroundTint="#222222"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_google"
                    app:iconSize="18dp"
                    app:iconTint="@null"
                    app:rippleColor="#FFFFFF20"
                    app:strokeColor="#333333"
                    app:strokeWidth="1dp" />

<!--                <com.google.android.material.button.MaterialButton-->
<!--                    android:id="@+id/btnFacebookLogin"-->
<!--                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="48dp"-->
<!--                    android:layout_marginStart="8dp"-->
<!--                    android:layout_weight="1"-->
<!--                    android:elevation="4dp"-->
<!--                    android:text="Facebook"-->
<!--                    android:textColor="#B0B0B0"-->
<!--                    android:textSize="14sp"-->
<!--                    app:backgroundTint="#222222"-->
<!--                    app:cornerRadius="24dp"-->
<!--                    app:icon="@drawable/ic_facebook"-->
<!--                    app:iconSize="18dp"-->
<!--                    app:iconTint="#1877F2"-->
<!--                    app:rippleColor="#FFFFFF20"-->
<!--                    app:strokeColor="#333333"-->
<!--                    app:strokeWidth="1dp" />-->

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>