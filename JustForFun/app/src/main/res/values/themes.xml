<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.JustForFun" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/accent_color</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Status bar configuration -->
        <item name="android:statusBarColor">@color/surface_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- Custom toolbar style for proper icon visibility -->
    <style name="CustomToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:theme">@style/CustomToolbarTheme</item>
        <item name="android:background">@color/surface_color</item>
        <item name="titleTextColor">@color/text_primary</item>
    </style>

    <style name="CustomToolbarTheme" parent="ThemeOverlay.MaterialComponents.Toolbar.Surface">
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorControlNormal">@color/text_primary</item>
    </style>
</resources>