<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PracticingAndroidDevelopment" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Make the status bar transparent -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Optional: Make the navigation bar transparent as well -->
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Optional: Use light status bar icons (for dark status bar background) -->
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>
